# VelariAI Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API KEYS (Required)
# =============================================================================

# Groq API Key - Get from https://console.groq.com/
# This is the primary AI service used for chat responses
GROQ_API_KEY=your_groq_api_key_here

# OpenAI API Key - Get from https://platform.openai.com/
# Optional fallback service for AI responses
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Environment mode (development, production, test)
NODE_ENV=development

# Port for the web server (default: 5000)
PORT=5000

# Host binding (use 0.0.0.0 for external access)
HOST=0.0.0.0

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated for multiple)
# For development: http://localhost:3000,http://localhost:5173
# For production: https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:5000

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================

# Session secret for secure sessions (generate a random string)
SESSION_SECRET=your_secure_random_session_secret_here

# Session timeout in milliseconds (default: 24 hours)
SESSION_TIMEOUT=86400000

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================

# Default AI model to use
AI_MODEL=llama-3.1-8b-instant

# Response timeout in milliseconds
AI_TIMEOUT=800

# Maximum response length
AI_MAX_TOKENS=200

# Temperature for AI responses (0.0 to 1.0)
AI_TEMPERATURE=0.5

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# WebSocket path
WS_PATH=/ws

# Maximum WebSocket connections per IP
WS_MAX_CONNECTIONS=10

# =============================================================================
# RATE LIMITING
# =============================================================================

# Enable rate limiting (true/false)
RATE_LIMIT_ENABLED=true

# Requests per minute per IP
RATE_LIMIT_MAX=60

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging (true/false)
LOG_REQUESTS=true

# =============================================================================
# DESKTOP APP CONFIGURATION
# =============================================================================

# App name for desktop version
APP_NAME=VelariAI

# App version
APP_VERSION=1.0.0

# Auto-update URL (for production builds)
# AUTO_UPDATE_URL=https://your-update-server.com

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable hot module replacement for development
DEV_HMR=true

# Open browser automatically on dev server start
DEV_OPEN_BROWSER=false

# Development server proxy settings
# DEV_PROXY_TARGET=http://localhost:3001

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable HTTPS in production (true/false)
HTTPS_ENABLED=false

# SSL certificate paths (for HTTPS)
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_KEY_PATH=/path/to/private.key

# Content Security Policy settings
CSP_ENABLED=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Enable gzip compression
GZIP_ENABLED=true

# Static file cache duration (in seconds)
STATIC_CACHE_DURATION=3600

# API response cache duration (in seconds)
API_CACHE_DURATION=300

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Enable performance monitoring
MONITORING_ENABLED=false

# Analytics service API key
# ANALYTICS_API_KEY=your_analytics_key_here

# Error reporting service API key
# ERROR_REPORTING_KEY=your_error_reporting_key_here

# =============================================================================
# DATABASE CONFIGURATION (Future Use)
# =============================================================================

# Database URL (if using persistent storage in future)
# DATABASE_URL=postgresql://username:password@localhost:5432/velari_ai

# Redis URL (for session storage in production)
# REDIS_URL=redis://localhost:6379

# =============================================================================
# CLOUD DEPLOYMENT SETTINGS
# =============================================================================

# Cloud provider settings (AWS, GCP, Azure, etc.)
# CLOUD_PROVIDER=aws

# Cloud storage bucket for file uploads
# CLOUD_STORAGE_BUCKET=velari-ai-uploads

# CDN URL for static assets
# CDN_URL=https://cdn.yourdomain.com

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================

# Backup schedule (cron format)
# BACKUP_SCHEDULE=0 2 * * *

# Maintenance mode (true/false)
MAINTENANCE_MODE=false

# Maintenance message
MAINTENANCE_MESSAGE=VelariAI is currently under maintenance. Please try again later.